{
  "name": "sprite-sheet-animator",
  "version": "1.0.0",
  "description": "Animate Sprite sheets and save in json",
  "scripts": {
    "build": "npm run build-code && npm run build-bundle",
    "build-code": "tsc",
    "build-bundle": "esbuild build/main.js --sourcemap --bundle --outfile=dist/main.cjs --platform=node --format=cjs --external:@nodegui/nodegui \"--external:nodegui-plugin-*\"",
    "clean": "rimraf build dist tmp-jam-pack-nodegui",
    "package": "jam-pack-nodegui --config packaging/jam-pack-nodegui.json",
    "run": "qode dist/main.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Battojutsu/sprite-sheet-animator.git"
  },
  "keywords": [
    "game",
    "development",
    "json",
    "sprite",
    "animation",
    "animator",
    "tool"
  ],
  "author": "Battojutsu",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Battojutsu/sprite-sheet-animator/issues"
  },
  "homepage": "https://github.com/Battojutsu/sprite-sheet-animator#readme",
  "dependencies": {
    "@nodegui/nodegui": "^0.67.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@nodegui/packer": "^1.5.0",
    "@types/node": "^22.4.1",
    "esbuild": "^0.23.1",
    "jam-pack-nodegui": "^0.19.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}
